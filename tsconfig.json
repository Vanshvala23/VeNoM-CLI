{
  "compilerOptions": {
    "module": "ESNext",  // Use ES Modules
    "target": "ES6",
    "outDir": "dist",
    "declaration": true,
    "esModuleInterop": true,  // Enable interop with CommonJS modules
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["src/**/*"]
}
